
<h1 class="text-center mt-4">Log In</h1>

<div class="container">
<div class="row justify-content-center">
  <div class="col-10">

    <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: {turbo: false}) do |f| %>
      <div class="form-group mb-3 row">
        <%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
        </div>
      </div>

      <div class="form-group mb-3 row">
        <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group mb-3 d-flex justify-content-center">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
  </div>
</div>
</div>