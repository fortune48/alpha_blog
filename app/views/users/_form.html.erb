
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    
      <%= render "shared/errors", object: @user %>

      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", data: {turbo: false}) do |f| %>
        <div class="form-group mb-3 row">
          <%= f.label :username, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Chose a password" %>
          </div>
        </div>

        <div class="form-group mb-3 d-flex justify-content-center">
          <%= f.submit "Sign Up", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>