<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-center mt-2">
    <div class="col-8">
        <div class="card text-center shadow-lg mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            <% if article.user %>
              created by: <%= link_to article.user.username, user_path(article.user) %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article, class: "text-success text-decoration-none" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100 ) %></p>
            <td><%= link_to "Show", article_path(article), class: "btn btn-outline-success" %></td>
            <td><%= link_to "Edit", edit_article_path(article),class: "btn btn-outline-info" %></td>
            <td><%= link_to "Delete", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure"}, class: "btn btn-outline-danger" %></td>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago,
                   Updated <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>