<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
    
      <%= render "shared/errors", object: @article %>

      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: {turbo: false}) do |f| %>
        <div class="form-group mb-3 row">
          <%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group mb-3 row">
          <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "Description of article", rows: 10 %>
          </div>
        </div>

        <div class="form-group mb-3 d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel and return to articles ]", articles_path, class: "d-flex justify-content-center text-info mb-4" %> 
  </div>
</div>