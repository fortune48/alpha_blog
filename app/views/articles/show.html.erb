<h3 class="text-center m-3"><%= @article.title %> </h3>

<div class="container">
  <div class="row justify-content-center mt-2">
  <div class="col-8">
      <div class="card text-center shadow-lg mb-5 bg-body rounded">
        <div class="card-header fst-italic">
          created by: Ukwuoma Fortune
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>
          <%= link_to "edit", edit_article_path(@article), class: "btn btn-outline-info" %>
          <%= link_to "delete", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure"}, class: "btn btn-outline-danger" %>
          <%= link_to "Return to articles", articles_path, class: "btn btn-outline-primary" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
                  Updated <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex mb-2 justify-content-center">
  <%= link_to "Create article", new_article_path, class: "btn btn-secondary"%>
</div>