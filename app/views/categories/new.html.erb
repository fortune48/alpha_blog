<div class="container">
<h1 class="text-center mt-4">Craete a new category</h1>
  
  <div class="row justify-content-center">
    <div class="col-10">
    
      <%= render "shared/errors", object: @category %>

      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: {turbo: false}) do |f| %>
        <div class="form-group mb-3 row">
          <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group mb-3 d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel and return to articles ]", articles_path, class: "d-flex justify-content-center text-info mb-4" %> 
  </div>
</div>